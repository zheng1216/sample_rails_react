<div class='intro-header'>
  <div class='head_container'>
    <div class='row'>
      <div class='col-lg-6'>
        <div class='site-heading'>
          <h1>Sample Blog</h1>
          <span class='subheading'>使えば使うほど賢くなるブログ</span>
        </div>
      </div>
      <div class='col-lg-4 registration'>
        <h3>新規登録</h3>
        <%= form_for(@user, url: registration_path(@user)) do |f| %>
            <div class='form-group'>
              <%= f.text_field :user_name, autofocus: true, class: 'form-control', placeholder: 'ユーザー名' %>
            </div>

            <div class='form-group'>
              <%= f.email_field :email, class: 'form-control', placeholder: 'メールアドレス' %>
            </div>

            <div class='form-group'>
              <%= f.password_field :password, autocomplete: 'off', class: 'form-control', placeholder: 'パスワード(6文字以上)' %>
            </div>

            <div class='form-group'>
              <%= f.password_field :password_confirmation, autocomplete: 'off', class: 'form-control', placeholder: 'パスワード(確認)' %>
            </div>

            <div class="actions">
              <%= f.submit '登録', class: 'btn btn-primary btn-block' %>
            </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
<%= react_component('HomeRoot', {posts: @posts, profiles: @favorite_profiles}, {prerender: true}) %>
