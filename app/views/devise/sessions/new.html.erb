<div class="container">
  <div class="devise_page_layouts">

    <h2>ログイン</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class='form-group'>
          <%= f.label :login, "user name" %><br />
          <%= f.text_field :login, autofocus: true, class: 'form-control',  placeholder: 'メールアドレス或いはユーザー名' %>
        </div>

        <div class='form-group'>
          <%= f.password_field :password, autocomplete: 'off', class: 'form-control', placeholder: 'パスワード' %>
        </div>

        <% if devise_mapping.rememberable? -%>
            <div class='form-group'>
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
        <% end -%>

        <div class="actions">
          <%= f.submit 'ログイン', class: 'btn btn-primary btn-block' %>
        </div>
    <% end %>

    <%= render 'devise/shared/links' %>
  </div>
</div>
